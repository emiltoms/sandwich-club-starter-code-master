<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/detail_layout_scrollview"
    tools:context="com.udacity.sandwichclub.DetailActivity">

    <LinearLayout
        style="@style/detail_layout_with_text_view"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_iv"
            style="@style/detail_image" />

        <TextView
            android:id="@+id/category_also_know_as_tv"
            style="@style/detail_text_view_category"
            android:text="@string/detail_also_known_as_label" />

        <TextView
            android:id="@+id/also_known_tv"
            style="@style/detail_text_view_content" />

        <TextView
            style="@style/detail_text_view_category"
            android:text="@string/detail_ingredients_label" />

        <TextView
            android:id="@+id/ingredients_tv"
            style="@style/detail_text_view_content" />

        <TextView
            style="@style/detail_text_view_category"
            android:text="@string/detail_place_of_origin_label" />

        <TextView
            android:id="@+id/origin_tv"
            style="@style/detail_text_view_content" />

        <TextView
            style="@style/detail_text_view_category"
            android:text="@string/detail_description_label" />

        <TextView
            android:id="@+id/description_tv"
            style="@style/detail_text_view_content" />

    </LinearLayout>

</ScrollView>
